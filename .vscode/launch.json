{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/server/index.ts",
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/server/**/*.js"],
            "sourceMaps": true,
            "stopOnEntry": true,
            "console": "internalConsole"
        },
        {
            "name": "attach chrome",
            "type": "chrome",
            "request": "attach",
            "port":9222,
            "url": "http://localhost",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true
            // "runtimeArgs": ["--nolazy"]
        },
        {
            "name": "launch chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true,
            "runtimeArgs": ["--nolazy"]
        }
    ]
}