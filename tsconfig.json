{
    "compilerOptions": {
        "outDir": "./dist/static",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        // types option has been previously configured
        "types": [
            // add node as an option
            "node"
        ],
        "moduleResolution": "node",
        "jsx": "react",
        "allowSyntheticDefaultImports": true
    },
    "files": [
        "./typings/index.d.ts",
        "./src/index.tsx"
    ],
    "exclude": [
        "./node_modules"
    ]
}